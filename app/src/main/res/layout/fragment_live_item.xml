<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/headImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_femail"
            app:sriv_oval="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/headImage"
            android:maxLength="10"
            android:text="阿叔阿叔阿叔阿叔阿叔阿叔"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/fravetor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:text="12345"
            android:textColor="#F8CC0B"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/headImage"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/headImage"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="5dp"
            android:maxLength="10"
            android:text="芜湖市"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/str_hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/headImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="人气"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/headImage"
            android:layout_toLeftOf="@+id/str_hits"
            android:text="77777"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_big" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_live_item_live" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/image"
            android:layout_marginTop="10dp"
            android:background="#D1D1D1" />
    </RelativeLayout>


</LinearLayout>