<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rank_top"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/video_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/bg_error"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/no_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_2"
                android:src="@drawable/ic_no_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_2"
                android:src="@drawable/ic_huangguan_2" />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_2"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="name_2"
                android:textColor="#f1d09e"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/number_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/zan_2"
                android:text="10票"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/zan_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_2"
                android:layout_below="@+id/name_2"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_rank_zan_d" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/video_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/no_1"
                android:layout_alignRight="@+id/no_1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/bg_error" />

            <ImageView
                android:id="@+id/no_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_1"
                android:src="@drawable/ic_no_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_1"
                android:src="@drawable/ic_huangguan_1" />

            <TextView
                android:id="@+id/name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/image_1"
                android:layout_alignRight="@+id/image_1"
                android:layout_below="@+id/no_1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:lines="1"
                android:text="name_1"
                android:textColor="#f1d09e"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/number_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/zan_1"
                android:text="10票"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/zan_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_1"
                android:layout_below="@+id/name_1"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_rank_zan_s" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/video_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/no_3"
                android:layout_alignRight="@+id/no_3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/bg_error" />

            <ImageView
                android:id="@+id/no_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_3"
                android:src="@drawable/ic_no_3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_3"
                android:src="@drawable/ic_huangguan_3" />

            <TextView
                android:id="@+id/name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_3"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="name_2"
                android:textColor="#f1d09e"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/number_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/zan_3"
                android:text="10票"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/zan_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/image_3"
                android:layout_below="@+id/name_3"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_rank_zan_d" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>