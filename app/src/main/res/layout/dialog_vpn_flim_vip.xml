<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialig_vip_vpn_flim_top" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@drawable/ic_dialog_close_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_bottom"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="海外视频服务商提供3万大片\n交3美元服务费 终身免费观看\n每日定时更新最新爽片\n你值得拥有！"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_middle" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_pay_type_selector"
                android:checked="true"
                android:drawableLeft="@drawable/ic_wechat"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="微信支付"
                android:textColor="#ffffff" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_pay_type_selector"
                android:drawableLeft="@drawable/ic_alipay"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="支付宝支付"
                android:textColor="#ffffff" />
        </RadioGroup>

        <Button
            android:id="@+id/open_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_round_bg_white"
            android:text="立即开通"
            android:textColor="#df298d"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="温馨提示：如果遇到微信不可支付，请使用支付宝完成支付，推荐使用支付宝支付"
            android:textColor="#AAFFFFFF"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>